<%- include('../partials/headerTop.ejs') %>

    <%- include('../partials/navbarStyle.ejs') %> 
    <%- include('../partials/formStyle.ejs') %> 

<%- include('../partials/headerBottom.ejs') %> 

    <%- include('../partials/navbar.ejs') %> 

    <div class="container">

        
        <form action="/gym/place/add" method="post" class="edit">

            <a href="/gym/places" class="back"><i class="fa-solid fa-angles-left"></i>Back to Places</a>
            
            <span class="titleForm">
                new place
            </span>
    
            <label for="name">Name Place *</label>
            <input type="text" name="name" autocomplete="off" placeholder="Name" value="<%= name %>" >

            <label for="ubication">Ubication *</label>
            <input type="text" name="ubication" autocomplete="off" placeholder="Cochabamba - Tiquipaya" value="<%= ubication %>">

            <label for="ubicationURL">Ubication Google Maps *</label>
            <input type="url" name="ubicationURL" autocomplete="off" 
            placeholder="https://www.google.com/maps"
            value="<%= ubicationURL %> ">
    
            <label for="phone">Phone *</label>
            <input type="text" name="phone" autocomplete="off" placeholder="00000000" value="<%= phone %>">

            <% if(dangerMessage[0]) %> 
                <label for="dangerMessage" class="messageTag">
                    <%= dangerMessage %> 
                </label>
    
            <button class="editButtom">Add Place</button>

            <style>
                .navbar {
                    background: #000;
                }
            </style>
    
        </form>
    </div>


<%- include('../partials/footer.ejs') %> 
